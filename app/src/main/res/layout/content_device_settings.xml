                    android:text="Type ID:"/>
                <EditText
                    android:id="@+id/type_id_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
