<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.CloudActivity"
    tools:showIn="@layout/activity_cloud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cloud settings"/>

        <Button
            android:id="@+id/new_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="NEW"/>

        <Spinner
            android:id="@+id/cloud_providers_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </Spinner>

        <LinearLayout
            android:id="@+id/organizatio_id_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:text="Organization ID:"/>
            <EditText
                android:id="@+id/organizatio_id_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="wg3go6"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/app_id_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:text="Application ID:"/>
            <EditText
                android:id="@+id/app_id_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="mobiotapp"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/key_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:text="Auth key:"/>
            <EditText
                android:id="@+id/key_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="a-wg3go6-xmq3pyxk6u"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/token_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:text="Auth token:"/>
            <EditText
                android:id="@+id/token_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text=")eRnSSnHT0iYisKboT"/>
        </LinearLayout>


        <LinearLayout

            android:id="@+id/connection_type_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:text="Connection type:"/>
            <Spinner
                android:id="@+id/connection_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                android:enabled="false"
                android:entries="@array/connection_types"
            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/show_url_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full URL:"/>
            <TextView
                android:id="@+id/show_url_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tcp://quickstart.messaging.internetofthings.ibmcloud.com:1883"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Edit"/>

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Delete"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
